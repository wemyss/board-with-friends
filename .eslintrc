{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "indent": ["error", "tab"],
    "no-console": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  },
  "globals": {
    "Phaser": true,
    "module": true,
    "planck": true,
    "world": true
  },
  "settings": {
    "import/core-modules": ["phaser"]
  }
}
